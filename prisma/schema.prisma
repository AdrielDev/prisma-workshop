datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int @id @default(autoincrement())
  name  String?
  email String @unique
  posts Post[]
}
//TAREFA 04: Adicione uma tabela Post ao seu banco de dados
model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}